  "host": "cse341-lesson02.herokuapp.com",
  "basePath": "/",
  "tags": [
    {
      "name": "Contacts",
      "description": "All references needed to get, add, delete and edit contacts."
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/contacts/": {
      "get": {
        "tags": [
          "Contacts"
        ],
        "summary": "Returns all contacts",
        "description": "Returns all contacts added to database.",
        "operationId": "getAllContacts.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Returns all contacts.",
            "schema": {
              "$ref": "#/definitions/Users"
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/contacts/{id}": {
      "get": {
        "tags": [
          "Contacts"
        ],
        "summary": "Returns 1 contact by Id.",
        "description": "Returns the contact with the Id that matches the request   Id.",
        "operationId": "getContact",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "User Ids"
          }
        ],
        "responses": {
          "200": {
            "description": "Returns contact with specified request id",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/contacts/add_contact": {
      "post": {
        "tags": [
          "Contacts"
        ],
        "summary": "Adds 1 contact.",
        "description": "Adds the contact in the request.",
        "operationId": "addContact",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns posted contact",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/contacts/edit_contact/{id}": {
      "put": {
        "tags": [
          "Contacts"
        ],
        "summary": "Edits 1 contact by Id.",
        "description": "Changes the contact with the Id that matches the Id in    the request Id.",
        "operationId": "putContact",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns contact before edit",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/contacts/delete/{id}": {
      "delete": {
        "tags": [
          "Contacts"
        ],
        "summary": "Deletes 1 contact by Id.",
        "description": "Deletes the contact with the Id that matches the Id in the request Id.",
        "operationId": "deleteContact",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Returns deleted contact.",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/api-docs": {
      "get": {
        "description": "",
        "parameters": [],
        "responses": {}
      }
    },
    "/": {
      "get": {
        "tags": [
          "Other"
        ],
        "description": "",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string",
          "example": "Joe"
        },
        "lastName": {
          "type": "string",
          "example": "Doe"
        },
        "email": {
          "type": "string",
          "example": "Joe_Doe@gmail.com"
        },
        "favColor": {
          "type": "string",
          "example": "green"
        },
        "birthDay": {
          "type": "string",
          "example": "01-01-1990"
        }
      }
    },
    "Users": {
